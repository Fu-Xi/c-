#include <stdio.h>
#include <stdlib.h>

int main()
{
    /*
                          *
                         ***
                        *****
                          *
                          *
                          *
                          *
                          *
                          *
                          *
    */
    int i,j;

    for(i = 0;i <= 1;i++)
    {
        for(j = 0;j <= 1 - i;j++)
        {
            printf(" ");
        }
        for(j = 0;j <= 2 * i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i = 0;i <= 7;i++)
    {
        for(j = 0;j <= 4;j++)
        {
            if(i == 0)
            {
                printf("*");
            }
            else if(j == 2)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
