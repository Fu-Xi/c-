#include <stdio.h>
#include <stdlib.h>

int main()
{
    //演示getchar,putchar用法
    char ch1,ch2;  //字符型变量
    printf("请输入一个字符：");
    //scanf("%c",&ch1);
    ch1 = getchar();
    //清空缓冲区
    fflush(stdin);
    printf("请输入第二个字符：");
    ch2 = getchar();
    //printf("您输入的字符为：%c,%c\n",ch1,ch2);
    printf("您输入的字符是：");
    putchar(ch1);
    putchar(',');
    putchar(ch2);


    return 0;
}
